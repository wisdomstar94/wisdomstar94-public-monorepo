{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["src/*"],
      "#packages-common-lib": ["../../libs/packages-common-lib/src/index"]
    }
  },
  "include": ["next-env.d.ts", "./src/**/*.ts", "./src/**/*.tsx", "../../libs/packages-common-lib/src/index.ts"],
  "exclude": ["node_modules"]
}
